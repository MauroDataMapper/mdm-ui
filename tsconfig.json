{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata" : true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "target": "ES6",
    "types": [
      "jest"
    ],
    "paths": {
      "@mdm/*": ["projects/mdm-ui/src/app/*"],
      "@env/*": ["projects/mdm-ui/src/environments/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
